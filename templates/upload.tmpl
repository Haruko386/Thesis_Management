<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>上传论文 - PaperHub</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdf.js/3.11.174/pdf.min.js"></script>
    <script>
        // 设置 PDF.js worker 地址（必须与主库版本一致）
        pdfjsLib.GlobalWorkerOptions.workerSrc = 'https://cdnjs.cloudflare.com/ajax/libs/pdf.js/3.11.174/pdf.worker.min.js';
    </script>
</head>
<body class="bg-gray-50 min-h-screen py-10 flex items-center justify-center px-4">

<div class="bg-white rounded-2xl shadow-xl border border-gray-100 w-full max-w-5xl flex flex-col md:flex-row overflow-hidden">

    <div class="w-full md:w-1/3 bg-gray-100 border-b md:border-b-0 md:border-r border-gray-200 p-8 flex flex-col justify-center items-center">
        <h3 class="text-lg font-semibold text-gray-700 mb-6">论文封面预览</h3>

        <div id="coverContainer" class="relative w-full aspect-[1/1.414] bg-white shadow-lg rounded-sm border border-gray-300 flex items-center justify-center overflow-hidden">
            <div id="placeholder" class="text-center p-4">
                <svg class="w-12 h-12 text-gray-300 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path></svg>
                <span class="text-sm text-gray-400">PDF 首页将显示在此处</span>
            </div>
            <canvas id="pdfCanvas" class="hidden w-full h-full object-contain"></canvas>
        </div>
    </div>

    <div class="w-full md:w-2/3 p-8">
        <div class="flex justify-between items-center mb-6">
            <h2 class="text-2xl font-bold text-gray-800">上传新论文</h2>
        </div>

        <form action="/api/upload" method="POST" enctype="multipart/form-data" class="space-y-5">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
                <div class="md:col-span-2">
                    <label for="title" class="block text-sm font-medium text-gray-700 mb-1">论文标题</label>
                    <input type="text" id="title" name="title" placeholder="输入论文完整标题" class="w-full border border-gray-300 px-4 py-2.5 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition" required>
                </div>

                <div>
                    <label for="author" class="block text-sm font-medium text-gray-700 mb-1">作者</label>
                    <input type="text" id="author" name="author" placeholder="第一作者等" class="w-full border border-gray-300 px-4 py-2.5 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition" required>
                </div>

                <div>
                    <label for="classification" class="block text-sm font-medium text-gray-700 mb-1">分类</label>
                    <input type="text" id="classification" name="classification" placeholder="例如：AI; 大数据" class="w-full border border-gray-300 px-4 py-2.5 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition" required>
                </div>

                <div>
                    <label for="journal" class="block text-sm font-medium text-gray-700 mb-1">发表期刊</label>
                    <input type="text" id="journal" name="journal" placeholder="期刊名称" class="w-full border border-gray-300 px-4 py-2.5 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition" required>
                </div>

                <div>
                    <label for="publicdate" class="block text-sm font-medium text-gray-700 mb-1">发布日期</label>
                    <input type="date" id="publicdate" name="publicdate" class="w-full border border-gray-300 px-4 py-2.5 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition" required>
                </div>
            </div>

            <div class="mt-4">
                <label class="block text-sm font-medium text-gray-700 mb-1">论文文件 (PDF)</label>
                <div class="border-2 border-dashed border-gray-300 rounded-xl p-8 text-center hover:bg-blue-50 hover:border-blue-400 transition cursor-pointer relative group" id="dropZone">
                    <input type="file" name="file" id="fileInput" accept="application/pdf" class="absolute inset-0 w-full h-full opacity-0 cursor-pointer" required>

                    <div class="flex flex-col items-center justify-center space-y-2 pointer-events-none">
                        <svg class="w-10 h-10 text-gray-400 group-hover:text-blue-500 transition" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path></svg>
                        <p class="text-gray-500 text-sm font-medium group-hover:text-blue-600">点击或拖拽 PDF 文件至此处</p>
                        <p class="text-gray-400 text-xs" id="fileNamePreview">支持 PDF 格式</p>
                    </div>
                </div>
            </div>

            <div class="pt-2 flex gap-4">
                <button type="submit" class="flex-1 bg-blue-600 text-white py-3 rounded-xl font-bold shadow-md hover:bg-blue-700 hover:shadow-lg transition disabled:opacity-50 disabled:cursor-not-allowed" id="submitButton">确认上传</button>
                <a href="/" class="px-6 py-3 rounded-xl font-semibold text-gray-500 hover:bg-gray-100 hover:text-gray-700 transition">取消</a>
            </div>
        </form>
    </div>
</div>

<script>
    const fileInput = document.getElementById('fileInput');
    const fileNamePreview = document.getElementById('fileNamePreview');
    const pdfCanvas = document.getElementById('pdfCanvas');
    const placeholder = document.getElementById('placeholder');
    const submitButton = document.getElementById('submitButton');

    fileInput.addEventListener('change', async function(e) {
        const file = e.target.files[0];

        if (!file) return;

        // 1. 更新文件名显示
        if (file.type !== 'application/pdf') {
            alert('请上传 PDF 格式的文件');
            this.value = ''; // 清空选择
            return;
        }
        fileNamePreview.textContent = `已选择: ${file.name}`;
        fileNamePreview.classList.add('text-blue-600', 'font-bold');

        // 2. 使用 PDF.js 生成封面
        try {
            // 将文件转换为 ArrayBuffer
            const arrayBuffer = await file.arrayBuffer();

            // 加载 PDF 文档
            const loadingTask = pdfjsLib.getDocument(arrayBuffer);
            const pdf = await loadingTask.promise;

            // 获取第一页
            const page = await pdf.getPage(1);

            // 计算缩放比例 (以匹配容器宽度)
            // 获取 Canvas 父容器的宽度
            const containerWidth = pdfCanvas.parentElement.clientWidth;
            const viewportRaw = page.getViewport({ scale: 1 });
            const scale = containerWidth / viewportRaw.width;

            const viewport = page.getViewport({ scale: scale });

            // 设置 Canvas 尺寸
            pdfCanvas.height = viewport.height;
            pdfCanvas.width = viewport.width;

            // 渲染上下文
            const renderContext = {
                canvasContext: pdfCanvas.getContext('2d'),
                viewport: viewport
            };

            // 开始渲染
            await page.render(renderContext).promise;

            // 切换显示状态
            placeholder.classList.add('hidden');
            pdfCanvas.classList.remove('hidden');

        } catch (error) {
            console.error('PDF 封面生成失败:', error);
            fileNamePreview.textContent = `文件加载失败: ${error.message}`;
        }
    });
</script>

</body>
</html>